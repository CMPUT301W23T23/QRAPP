<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@android:color/black">

    <ImageButton
        android:id="@+id/picture_back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_arrow_back_24"
        android:background="@drawable/ic_baseline_arrow_back_24"
        app:tint="@color/white"
        android:layout_alignParentTop="true"
        />

    <androidx.camera.view.PreviewView
        android:id="@+id/picture_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/picture_back_btn"
        android:layout_alignBottom="@id/picture_take_photo"></androidx.camera.view.PreviewView>

    <Button
        android:id="@+id/picture_take_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Take \n Photo"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>